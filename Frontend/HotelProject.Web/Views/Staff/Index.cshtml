@using HotelProject.Web.Models.Staff
@model List<StaffViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h2>Personel Listesi</h2>



<table class="table table-bordered ">
    
        <tr>
            <th>#</th>
            <th>Personel Adı</th>
            <th>Personel Unvanı</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Detaylar</th>
        </tr>
    
   
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.StaffID</th>
                <td>@item.Name</td>
                <td>@item.Title</td>
                <td>
                <a href="/Staff/DeleteStaff/@item.StaffID" class="btn btn-outline-danger ">Sil</a>
                    <a href="/Staff/UpdateStaff/@item.StaffID" class="btn btn-outline-success ">Güncelle</a>
                    <a href="/Staff/Details/@item.StaffID" class="btn btn-outline-dark ">Detaylar</a>
                </td>
            </tr>
        }

    
</table>
<a href="/Staff/AddStaff/" class="btn btn-outline-info">Yeni Personel Ekle</a>
